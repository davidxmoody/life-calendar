<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Life calendar</title>
  <style>
    .app {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .sidebar {
      flex-shrink: 0;
      flex-grow: 1;
      width: 400px;
      background: #eee;
      display: flex;
      flex-direction: column;
    }

    .sidebar--hidden {
      display: none;
    }

    .sidebar__tab-row {
      flex-shrink: 0;
      flex-grow: 0;
    }

    .sidebar__iframe-container {
      position: relative;
      flex-grow: 1;
    }

    .sidebar__iframe-container iframe{
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      width: 100%;
      height: 100%;
    }

    .calendar {
      -webkit-user-select: none;
      width: 860px;
      flex-grow: 0;
      flex-shrink: 0;
    }

    .decade {}

    .year {
      display: inline-flex;
      flex-wrap: wrap;
      height: 70px;
      width: 82px;
    }

    .week {
      box-sizing: border-box;
      width: 9px;
      height: 9px;
      margin-left: 1px;
    }

    .week:target {
      border: 2px solid red;
    }
  </style>
</head>
<body>
  <div class="app">
    <div class="calendar">
      {% for decade in calendar.decades %}
        <div class="decade">
          {% for year in decade.years %}
            <div class="year">
              {% for week in year.weeks %}
                <a
                  class="week"
                  href="#{{ week.startDate }}"
                  id="{{ week.startDate }}"
                  style="background-color: {{ week.color }};"
                  title="{{ week.title }}"
                ></a>
              {% endfor %}
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    </div>

    <div class="sidebar sidebar--hidden">
      <div class="sidebar__tab-row">
        <a class="sidebar__tab" href="javascript:openTab('eras')" id="tab-toggle-eras">Eras</a>
        <a class="sidebar__tab" href="javascript:openTab('week')" id="tab-toggle-eras">Week</a>
      </div>
      <div class="sidebar__iframe-container">
        <iframe src="/eras" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script>
    function unhideSidebar() {
      document.querySelector(".sidebar").classList.remove("sidebar--hidden")
    }

    function openTab(tabName) {
      localStorage.currentTab = tabName
      updateSidebar()
    }

    // const weeks = document.querySelectorAll(".week")

    // function updateWeeks(eraGroupIndex) {
    //   document.querySelector(".calendar").classList.toggle(`calendar--highlight-era-group-${eraGroupIndex}`)
    // }

    function updateSidebar() {
      const date = window.location.hash.replace(/^#/, "") || "{{ calendar.currentWeekStart }}"
      const currentTab = localStorage.currentTab || "week"

      if (currentTab === "week") {
        document.querySelector(".sidebar__iframe-container iframe").src = `/weeks/${date}` // TODO
      } else if (currentTab === "eras") {
        document.querySelector(".sidebar__iframe-container iframe").src = "/eras" // TODO
      }
    }

    window.addEventListener("hashchange", unhideSidebar)
    window.addEventListener("hashchange", updateSidebar)
    updateSidebar()
  </script>
</body>
</html>
