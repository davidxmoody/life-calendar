<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8">
  <title>Life calendar</title>

  <style>
    .calendar {
      float: left;
      display: flex;
      flex-wrap: wrap;
      width: 850px;
    }

    .sidebar {
      width: 400px;
      height: 688px;
      background: #eee;
      float: left;
    }

    .year {
      display: flex;
      flex-wrap: wrap;
      flex-grow: 0;
      flex-shrink: 0;
      margin: 1px;
      height: 70px;
      width: 82px;
      margin-bottom: 6px;
    }

    .week {
      box-sizing: border-box;
      border: 1px solid grey;
      width: 9px;
      height: 9px;
      margin-left: 1px;
      opacity: 0.9;
      position: relative;
    }

    .week:target {
      border: 2px solid red;
    }

    .week--past {
      border: 1px solid grey;
    }

    .week--future {
      opacity: 0.2;
    }

    .week--selected {
      opacity: 1;
      border: 2px solid orange;
    }

    .week__era {
      position: absolute;
      width: 100%;
      height: 100%;
      opacity: 0.5;
      box-sizing: border-box;
    }

    .era {
      cursor: pointer;
      margin: 20px;
    }

    .era--clear {
      color: grey;
    }

    {% for era in eras %}
      .calendar--highlight-era-{{ loop.index }} .week__era--{{ loop.index }} {
        border: 1px solid black;
        opacity: 0.8;
      }
    {% endfor %}
  </style>

</head>
<body>

  <div class="calendar">
    {% for yearNum, yearWeeks in weeks | groupby('yearNum') %}
      <div class="year {% if ((yearNum | int) + 1) % 10 == 0 %}year--decade-end{% endif %}">
        {% for week in yearWeeks %}
          <a
            class="week {% if week.startDate > currentDate %}week--future{% endif %}"
            href="#{{ week.startDate }}"
            id="{{ week.startDate }}"
          >
            {% for era in eras %}
              {% if (era.startDate <= week.startDate) and (era.endDate >= week.startDate) %}
                <div
                  class="week__era week__era--{{ loop.index }}"
                  style="background: {{ era.color }};"
                ></div>
              {% endif %}
            {% endfor %}
          </a>
        {% endfor %}
      </div>
    {% endfor %}
  </div>

  <div class="sidebar">
    {% for era in eras %}
      <div class="era" onclick="updateWeeks({{ loop.index }})">
        <button class="era__button" style="background: {{ era.color }};">
          {{ era.name }} <small>({{ era.startDate }} to {{ era.endDate }})</small>
        </button>
      </div>
    {% endfor %}
    <div class="era era--clear" onclick="updateWeeks()">
      Clear selection
    </div>
  </div>

  <script>
    const weeks = document.querySelectorAll(".week")

    function updateWeeks(eraIndex) {
      document.querySelector(".calendar").classList.toggle(`calendar--highlight-era-${eraIndex}`)
    }

//    function updateSidebar() {
//      const date = window.location.hash.replace(/^#/, "")
//      document.querySelector(".sidebar__date").innerHTML = date
//    }
//    window.addEventListener("hashchange", updateSidebar)
//    updateSidebar()
  </script>

</body>
</html>
