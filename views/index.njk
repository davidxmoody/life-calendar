<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8">
  <title>Life calendar</title>

  <style>
    .calendar {
      display: flex;
      flex-wrap: wrap;
      width: 740px;
    }

    .year {
      display: flex;
      flex-wrap: wrap;
      flex-grow: 0;
      flex-shrink: 0;
      margin: 1px;
      height: 80px;
      width: 72px;
      margin-bottom: 8px;
    }

    .year--decade-end {}

    .week {
      box-sizing: border-box;
      border: 1px solid black;
      width: 9px;
      height: 9px;
      margin-left: 1px;
    }

    .week:target {
      border: 2px solid red;
    }

    .week--past {
      border: 1px solid grey;
    }

    .week--future {
      opacity: 0.3;
    }

    .modal {
      display: none;
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.5);
    }

    .modal iframe {
      width: 700px;
      max-width: 100vw;
      height: 100%;
      max-height: 90vh;
    }

    .modal--open {
      display: flex;
    }
  </style>

</head>
<body>

  <div class="calendar">
    {% for yearNum, yearWeeks in weeks | groupby('yearNum') %}
      <div class="year{% if ((yearNum | int) + 1) % 10 == 0 %} year--decade-end{% endif %}">
        {% for week in yearWeeks %}
          <a
            class="week week--{{ week.temporalStatus }}"
            style="background: {{ week.color}};"
            href="#{{ week.startDate }}"
            id="{{ week.startDate }}"
          ></a>
        {% endfor %}
      </div>
    {% endfor %}
  </div>

  <div class="modal" onclick="closeModal()">
    <iframe frameborder="0"></iframe>
  </div>

  <script>
    function closeModal(week) {
      document.querySelector(".modal iframe").src = undefined
      document.querySelector(".modal").classList.remove("modal--open")
    }

    function openModal(week) {
      document.querySelector(".modal iframe").src = `/weeks/${week}`
      document.querySelector(".modal").classList.add("modal--open")
    }

    document.querySelector(".calendar").addEventListener("click", event => {
      const el = event.target
      if (el.classList.contains("week")) {
        openModal(el.id)
      }
    })
  </script>

</body>
</html>
